<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="#fff">

    <EditText android:layout_width="fill_parent"
              android:layout_height="50sp"
              android:text=""
              android:textSize="30sp"
              android:id="@+id/display"
              android:hint=""
              android:background="@drawable/edittextstyle"
              android:gravity="end"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:gravity="center"
                  android:paddingTop="10sp">
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/one" android:text="@string/one"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/two" android:text="@string/two"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/three" android:text="@string/three"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="15sp"
                android:id="@+id/mul" android:text="@string/mul"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:gravity="center"
                  android:paddingTop="5dp">
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/four" android:text="@string/four"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/five" android:text="@string/five"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/six" android:text="@string/six"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/sub" android:text="@string/sub"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:gravity="center"
                  android:paddingTop="5dp">
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/delete" android:text="@string/delete"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/zero" android:text="@string/zero"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/equal" android:text="@string/equal"/>
        <Button android:layout_width="0sp" android:layout_height="75sp"
                android:layout_weight=".20" android:textSize="26sp"
                android:id="@+id/add" android:text="@string/add"/>
    </LinearLayout>

</LinearLayout>